" ==================== others ==================== "
" load local file
js <<EOM
(function() {
    var local = "~/.vimperatorrc.local";
    var file = io.getFile(local);
    if(file.exists() && file.isReadable()) {
        io.source(local, true);
    }
})();
EOM
