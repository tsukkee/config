    {
        conf_name: 'disable',
        conf_usage: 'direct connection',
        settings: [
            {
                label: 'type',
                param: 0
            }
        ]
    },
    {
        conf_name: 'cocproxy',
        conf_usage: 'use CocProxy',
        settings: [
            {
                label: 'type',
                param: 1
            },
            {
                label: 'http',
                param: 'localhost'
            },
            {
                label: 'http_port',
                param: 5432
            }
        ]
    }
];
EOM

