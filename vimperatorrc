nnoremap -urls '^http://www\.nicovideo\.jp/watch' , :nicomove -10<CR>
nnoremap -urls '^http://www\.nicovideo\.jp/watch' > :nicomove +60<CR>
nnoremap -urls '^http://www\.nicovideo\.jp/watch' < :nicomove -60<CR>
nnoremap -urls '^http://www\.nicovideo\.jp/watch' 0 :nicogoto<CR>
nnoremap -urls '^http://www\.nicovideo\.jp/watch' ] :nicovolume +20<CR>
nnoremap -urls '^http://www\.nicovideo\.jp/watch' [ :nicovolume -20<CR>
nnoremap -urls '^http://www\.nicovideo\.jp/watch' M :nicomute<CR>
