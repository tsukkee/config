(setq romkana-table "default.cbp")

(use-dictionary
 "gcanna"
 "gcannaf"
;; "iroha"
 "fuzokugo"
 "hojomwd"
 "hojoswd"
 "keishiki"
 :bushu "bushu"
 :user "user"
 )

;; シンボルの定義
(defsymbol 
  ?[ "「" "『" "[" "［" "〔"
  ?] "」" "』" "]" "］" "〕" )

(defsymbol 
  ?. "。" "." "．"
  ?, "、" "," "，" )

;(defsymbol 
;  ?~ "~" "￣" "〜"
;  ?/ "/" "／" "・" )

