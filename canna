(global-unbind-key-function 'japanese-mode)
(set-key 'alpha-mode "F3" 'japanese-mode)

; (set-key 'empty-mode "\C-\" 'alpha-mode)
(global-unbind-key-function 'alpha-mode)
(set-key 'empty-mode "F4" 'undefined)
